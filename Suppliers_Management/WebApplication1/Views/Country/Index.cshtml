@model IEnumerable<CountryResponse>

@{
    ViewBag.Title = "Countries";
}


<h1>Countries</h1>
<a asp-controller="Country" asp-action="AddCountry" class="btn btn-primary">Add a Country</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Country Name</th>
            <th>Action</th>
        </tr>

        @foreach (var country in Model)
        {
            <tr>
                <td>
                    @country.CountryId
                </td>
                <td>@country.CountryName</td>
                <td>
                    <a class="btn btn-success" href="/country/EditCountry/@country.CountryId">Edit</a>
                    <form asp-action="DeleteCountry" asp-route-id="@country.CountryId" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </thead>
</table>
<div>
    <a href="/" class="btn btn-secondary">Back to Home Page</a>
</div>

